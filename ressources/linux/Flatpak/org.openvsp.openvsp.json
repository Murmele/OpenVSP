{
  "app-id": "org.openvsp.openvsp",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "command": "openvsp",
  "finish-args": [
    "--socket=wayland",
	"--socket=x11",
    "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
    "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
    "--filesystem=home"],
    "rename-icon":"openvsp", /*Image will renamed to match the app-id konvention*/
    "modules": [
		"modules/glu-9.0.0.json",
		"modules/glew-2.0.0.json",
		"modules/glm.json",
		{
			"name": "openvsp",
			"buildsystem": "cmake",
			"subdir": "SuperProject",
			"build-commands": [
				"desktop-file-install --dir=/app/share/applications ressources/linux/org.openvsp.openvsp.desktop",
				"install -Dm755 ressources/linux/org.openvsp.openvsp.appdata.xml /app/share/metainfo/org.openvsp.openvsp.appdata.xml",
				"install -Dm755 ressources/icons/openvsp.png /app/share/icons/hicolor/400x400/apps/org.openvsp.openvsp.png"
			],
			"config-opts": [
				"-DCMAKE_BUILD_TYPE=Release",
				"-DCMAKE_PREFIX_PATH=/app/usr",
				"-DVSP_USE_SYSTEM_FLTK=false",
				"-DVSP_USE_SYSTEM_CPPTEST=false",
				"-DVSP_USE_SYSTEM_LIBXML2=true",
				"-DVSP_USE_SYSTEM_EIGEN=false",
				"-DVSP_USE_SYSTEM_FLTK=false",
				"-DVSP_USE_SYSTEM_GLM=true",
				"-DVSP_USE_SYSTEM_GLEW=true",
				"-DVSP_USE_SYSTEM_CMINPACK=false",
         		"-DVSP_USE_SYSTEM_CODEELI=false"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/OpenVSP/OpenVSP",
					"tag": "OpenVSP_3.14.0"
				}
			]
		}
      
    ]
}
